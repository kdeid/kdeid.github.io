<!-- BEGIN HEADER -->
<div class="header">
  <div class="container">
    <!--<a class="site-logo" href="<%- url_for() %>" id="logo"><%= config.title %></a>-->

    <a class="site-logo" href="/">
      <img src="<%- url_for('assets/img/logo.png') %>" alt="KDE Indonesia">
    </a>

    <a href="javascript:void(0);" class="mobi-toggler"><i class="fa fa-bars"></i></a>

    <!-- BEGIN NAVIGATION -->
    <div class="header-navigation pull-right font-transform-inherit">
      <ul>
        <% for (var i in theme.menu){ %>
        <li class="<%= url_for(theme.menu[i]) == url_for(path).substring(0, url_for(path).lastIndexOf('/') + 1) ? 'active' : ''   %>">
          <a  href="<%- url_for(theme.menu[i]) %>"><%= i %></a>
        </li>
        <% } %>
        <li class="menu-search">
          <span class="sep"></span>
          <i class="fa fa-search search-btn"></i>
          <div class="search-box">
            <form action="/search/">
              <div class="input-group">
                <input id="tipue_search_input" class="form-control" type="text" name="q" autocomplete="off" required placeholder="Searchâ€¦" autofocus="autofocus" />
                <span class="input-group-btn">
                  <button class="btn btn-primary" type="submit">Search</button>
                </span>
              </div>
            </form>
          </div> 
        </li>
        <!-- END TOP SEARCH -->
      </ul>
    </div>
    <!-- END NAVIGATION -->
  </div>
</div>
<!-- Header END -->
